@model IEnumerable<Model.Models.Turma>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Turmas</h2>
<p>
    @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-info" })
</p>
<table class="table table-condensed">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Disciplina)</th>
            <th>@Html.DisplayNameFor(model => model.Professor)</th>
            <th>@Html.DisplayNameFor(model => model.Turno)</th>
            <th>@Html.DisplayNameFor(model => model.Vagas)</th>
            <th>Ações</th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Disciplina.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Professor.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Turno)</td>
                <td>@Html.DisplayFor(modelItem => item.Vagas)</td>
                <td>
                    @Html.ActionLink("Atribuir Professor", "AtribuirProfessor", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Alterar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Remover", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Count() == 0)
{
    <h5 class="text-center">Não há turmas cadastradas</h5>
}
