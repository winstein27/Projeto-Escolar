@model IEnumerable<Model.Models.Disciplina>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Disciplinas</h2>
<p>
    @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-info" })
</p>
<table class="table table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.ActionLink("Alterar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Remover", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Count() == 0)
{
    <h5 class="text-center">Não há disciplinas cadastradas</h5>
}